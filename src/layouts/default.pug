doctype html
include partials/banner.pug

html(
  lang= site.language
  id= page.htmlId
  class= page.htmlClasses)

  head
    include partials/head.pug

  body(
    id= page.bodyId
    class= page.bodyClasses)

    include partials/header

    main
      if page.type === 'post'
        article
          header.postHeader
            include partials/postHeader
          .postContent
            block content
          footer.postFooter
            include partials/postPagination
            include partials/postShare

      else
        block content

    block scripts
