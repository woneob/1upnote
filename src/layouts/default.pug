doctype html
html(
  lang= site.language
  id= page.htmlId
  class= page.htmlClasses)

  head
    title= (page.title ? page.title + ' - ' : '') + site.name
    meta(charset= site.charset)
    meta(
      name= 'description'
      content= page.description || site.description)

    if !page.search
      meta(
        name= 'robots'
        content= 'none')

    block styles
      link(
        rel= 'stylesheet'
        href='/styles/common.css')

  body(
    id= page.bodyId
    class= page.bodyClasses)

    block content
    block scripts
