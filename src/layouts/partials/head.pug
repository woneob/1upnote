//- set character encoding for the document
meta(charset= site.charset)

//- Document title
title= (page.title ? page.title + ' - ' : '') + site.name

//- Description of the page
meta(
  name= 'description'
  content= page.description || site.description)

//- Defining The Viewport
meta(
  name= 'viewport'
  content= $.serialize(page.viewport || site.viewport))

//- Disable automatic detection and formatting
meta(
  name= 'format-detection'
  content= $.serialize(site.formatDetection))

//- Control the behavior of search engine crawling
if !page.search
  meta(
    name= 'robots'
    content= 'none')

//- Links to the author of the document
link(
  rel= 'author'
  href= '/humans.txt')

//- Web Application Manifest
link(
  rel= 'manifest'
  href= '/manifest.json')

//- Touch icon for iOS
link(
  rel= 'apple-touch-icon'
  href= site.icons[152])

//- Favicon for older versions of Chrome
link(
  rel= 'icon'
  type= 'image/png'
  sizes= '192x192'
  href= site.icons[192])

block styles
  link(
    rel= 'stylesheet'
    href='/styles/common.css')
